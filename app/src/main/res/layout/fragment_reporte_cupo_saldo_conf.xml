<layout>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        tools:context="com.dupreinca.dupree.mh_fragments_menu.ReporteCupoSaldoConfFragment">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <android.support.v7.widget.CardView
                    android:id="@+id/cardViewBackGround2"
                    card_view:cardBackgroundColor="@color/gray_2"
                    android:layout_margin="2.5dp"
                    card_view:cardCornerRadius="6dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvNombreAsesora"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@color/transparent"
                        android:padding="10dp"
                        tools:text="ENORELIS C. PEREZ H."
                        android:textAllCaps="true"
                        android:textAlignment="center"
                        android:textColor="@color/gray_6"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <android.support.v7.widget.CardView

                android:id="@+id/cardViewBackGround"
                card_view:cardBackgroundColor="@color/transp_azulDupree"
                card_view:cardCornerRadius="6dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">

                        <android.support.v7.widget.CardView
                            card_view:cardCornerRadius="6dp"
                            card_view:cardUseCompatPadding="true"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_margin="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:textStyle="normal"
                                    android:textSize="14sp"
                                    android:textAllCaps="true"
                                    android:textColor="@color/azulDupree"
                                    android:text="@string/cupo_two_points"/>

                                <TextView
                                    android:id="@+id/tvCupo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:textStyle="normal"
                                    android:textSize="20sp"
                                    android:textColor="@color/gray_6"
                                    tools:text="$840,000"/>
                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            card_view:cardCornerRadius="6dp"
                            card_view:cardUseCompatPadding="true"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_margin="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:textStyle="normal"
                                    android:textSize="14sp"
                                    android:textAllCaps="true"
                                    android:textColor="@color/azulDupree"
                                    android:text="@string/saldo_two_points"/>
                                <TextView
                                    android:id="@+id/tvSaldo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:textStyle="normal"
                                    android:textSize="20sp"
                                    android:textColor="@color/gray_6"
                                    tools:text="$199,112"/>
                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.CardView
                            card_view:cardCornerRadius="6dp"
                            card_view:cardUseCompatPadding="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:padding="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:textStyle="normal"
                                    android:textSize="14sp"
                                    android:textAllCaps="true"
                                    android:textColor="@color/azulDupree"
                                    android:text="@string/conferencia_two_points"/>

                                <TextView
                                    android:id="@+id/tvConferencia"
                                    android:paddingStart="4dp"
                                    android:paddingEnd="4dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:textStyle="normal"
                                    android:textSize="14sp"
                                    android:textColor="@color/gray_6"
                                    tools:text="No olvide asistir a su proxima conferencia de ventas el dia 23 de agosto a las 10 am en el SALON DE EVENTOS ACAPULCO - DIAGONAL 50 SUR Nro. 51-38. Informacion adicional con su Gerente de Zona." />
                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </FrameLayout>
</layout>