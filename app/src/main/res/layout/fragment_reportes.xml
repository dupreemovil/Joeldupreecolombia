<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.dupreinca.dupree.mh_fragments_menu.reportes.ReportesFragment">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewBackGround"
                card_view:cardBackgroundColor="@color/gray_2"
                android:layout_margin="2.5dp"
                card_view:cardCornerRadius="6dp"
                card_view:cardElevation="5dp"
                android:visibility="gone"
                card_view:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvNombreAsesora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/transparent"
                    android:padding="10dp"
                    tools:text="ENORELIS C. PEREZ H."
                    android:textAllCaps="true"
                    android:textAlignment="center"
                    android:textColor="@color/gray_6"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</layout>