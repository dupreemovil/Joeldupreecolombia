<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#FCDC3E"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_margin="10sp"
        android:elevation="5sp"
        android:layout_width="match_parent"
        android:background="#f5f5f5"
        android:layout_height="350sp">


        <Button
            android:id="@+id/buttonclose"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_alignParentRight="true"
            android:layout_margin="10sp"
            android:background="@drawable/cancelicon"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewBackGround"

            card_view:cardCornerRadius="7dp"
            card_view:cardElevation="3dp"
            android:layout_centerHorizontal="true"

            android:layout_width="100dp"
            android:layout_marginTop="20sp"
            android:maxHeight="100sp"
            android:layout_height="100sp">
        <androidx.cardview.widget.CardView




            android:layout_width="100dp"

            android:maxHeight="100dp"
            android:layout_height="100sp">

        <ImageView
            android:id="@+id/imageViewlogo"
            android:layout_width="100dp"

            android:maxHeight="100dp"
            android:layout_height="100sp"
            android:layout_gravity="center"


            android:elevation="15sp"
            android:padding="0dp"
             />

        </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QUERIDA ASESORA"


            android:textSize="15sp"
            android:id="@+id/txttitle"
            android:textColor="#000"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_centerInParent="true"


            >

        </TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutpreg"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            android:layout_below="@+id/txttitle"
            android:visibility="visible"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:layout_margin="7sp"
                    android:id="@+id/txtdescripcion"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Nombre"></TextView>

            </LinearLayout>















        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutbtn"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            android:layout_below="@+id/layoutpreg"
            android:visibility="visible"
            android:gravity="center"
            android:orientation="horizontal" >


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btncancel"
                android:layout_margin="10sp"


                android:background="@drawable/rounded_background_gray"
                android:layout_marginBottom="5sp"
                android:text="No">

            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnok"
                android:layout_margin="10sp"

                android:background="@drawable/rounded_background_gray"
                android:layout_marginBottom="5sp"
                android:text="Si">

            </Button>


        </LinearLayout>



    </RelativeLayout>


</LinearLayout>

